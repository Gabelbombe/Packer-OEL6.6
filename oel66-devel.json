{
  "provisioners": [{
      "environment_vars": [
        "PUPPET_VERSION={{user `puppet_version`}}"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "scripts": [
        "scripts/ol66/fix-slow-dns.sh",
        "scripts/common/sshd.sh",
        "scripts/common/vagrant.sh",
        "scripts/common/vmtools.sh",
        "scripts/common/puppet.sh",
        "scripts/ol66/cleanup.sh",
        "scripts/common/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "puppet_version": "provisionerless",
    "mirror": "http://mirrors.dotsrc.org/"
  },
  "builders": [{
        "name": "oel66-devel-vbox",
        "type": "virtualbox-iso",
        "boot_command": [
          "<tab> append initrd=initrd.img inst.text inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 20000,
      "guest_os_type": "Oracle_64",
      "http_directory": "http",
      "iso_checksum": "5738f10a506d3630edfd297ef179b553091c6a48",
      "iso_checksum_type": "sha1",
      "iso_url": "http://mirrors.dotsrc.org/oracle-linux/OL6/U6/x86_64/OracleLinux-R6-U6-Server-x86_64-dvd.iso",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "output_directory": "packer-oraclelinux-6.6-x86_64-virtualbox",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "packer-oraclelinux-6.6-x86_64",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "480"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ]
    }, {
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ol66-devel/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 20000,
      "guest_os_type": "Oracle_64",
      "http_directory": "http",
      "iso_checksum": "14107114f3eece76d16e5ec3fee5f524b09f9829b0ac38474ee676ddd4d2b9c2",
      "iso_checksum_type": "sha256",
      "iso_url": "http://mirrors.dotsrc.org/oracle-linux/OL6/U6/x86_64/OracleLinux-R6-U6-Server-x86_64-dvd.iso",
      "output_directory": "packer-oraclelinux-7.0-x86_64-vmware",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "tools_upload_flavor": "linux",
      "type": "vmware-iso",
      "vm_name": "packer-oraclelinux-7.0-x86_64",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "480",
        "numvcpus": "1"
      }
  }],
  "post-processors": [{
    "type": "vagrant",
    "output": "oraclelinux-6.6_puppet-{{user `puppet_version`}}.box",
    "compression_level": 1,
    "keep_input_artifact": true
  }]
}


